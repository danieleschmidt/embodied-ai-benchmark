# Embodied AI Benchmark++ Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/embodied_ai_benchmark
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=embodied_ai_benchmark
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# LLM Configuration for Curriculum Learning
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Simulator Configuration
HABITAT_DATA_PATH=/path/to/habitat/data
MANISKILL_ASSET_PATH=/path/to/maniskill/assets
ISAAC_SIM_PATH=/path/to/isaac/sim

# Evaluation Configuration
EVALUATION_TIMEOUT=300
MAX_EPISODES_PER_TASK=1000
PARALLEL_WORKERS=4
RESULTS_STORAGE_PATH=./results

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/benchmark.log

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance Configuration
MAX_MEMORY_GB=8
GPU_MEMORY_FRACTION=0.8
TORCH_NUM_THREADS=4

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
PROFILING_ENABLED=false

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true

# File Storage Configuration
STORAGE_BACKEND=local
STORAGE_PATH=./data
AWS_S3_BUCKET=your_s3_bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Experiment Tracking
WANDB_API_KEY=your_wandb_api_key
MLFLOW_TRACKING_URI=http://localhost:5000
EXPERIMENT_NAME=embodied_ai_benchmark